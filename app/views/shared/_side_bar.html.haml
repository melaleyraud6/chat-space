.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__user-name 
        = current_user.name
    
      %ul.side-header__box__menu
        %li.side-header__box__menu__new-group
          = link_to new_group_path, class: "side-header__box__menu__btn " do
            = icon('fas', 'edit', class: "fa-fw")
        %li.side-header__box__menu__edit-user
          = link_to edit_user_path(current_user), class: "side-header__box__menu__btn " do
            = icon('fas', 'cog', class: "fa-fw")
        
  .groups
    - current_user.groups.each do |group|
      .group
        =link_to group_messages_path(group) do
          .group__group-name 
            = group.name
          .group__lastest-message
            = group.show_last_message
    
    